@model ConfigurationModel
@{
    ViewData["Title"] = "Settings";
}

<form>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.Email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="@Model.Password">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">IMAP_HOST</label>
        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="@Model.IMAP_HOST">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">IMAP_PORT</label>
        <input type="number" class="form-control" id="exampleInputPassword1" placeholder="@Model.INCOMING_PORT_IMAP">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">SMTP_HOST</label>
        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="@Model.SMTP_HOST">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">SMTP_PORT</label>
        <input type="number" class="form-control" id="exampleInputPassword1" placeholder="@Model.OUTGOING_PORT_SMTP">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>